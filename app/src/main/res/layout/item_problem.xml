<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <ImageView
                android:id="@+id/ivProblem"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:src="@drawable/no_cover_available"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop" />

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvTitle" app:layout_constraintStart_toEndOf="@+id/ivProblem"
                android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@+id/ivProblem" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp" android:layout_marginRight="10dp" android:textSize="18sp"
                android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetail" app:layout_constraintStart_toStartOf="@+id/tvTitle"
                android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintEnd_toEndOf="@+id/tvTitle"/>


    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>