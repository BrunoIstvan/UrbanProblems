    <TextView
            android:text="Rafael Sergio Finoto Silva (RM: 330437)"
            style="@style/tv_about_common"
            android:layout_marginBottom="200dp" />

    <TextView
            android:text="Wagner Rodrigues (RM: 331769)"
            android:layout_marginBottom="180dp"
            style="@style/tv_about_common" />

    <TextView
            style="@style/tv_bold_20"
