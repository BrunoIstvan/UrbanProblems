<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.myprofile.MyProfileActivity"
        android:orientation="vertical">

    <LinearLayout style="@style/lin_layout_vertical"
        android:padding="0dp">

        <LinearLayout style="@style/lin_layout_vertical"
            android:background="@drawable/side_nav_bar">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivMyProfile"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="1dp"
                android:src="@drawable/fpo_avatar"
                style="@style/cv_profile" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="10dp"
            style="@style/card_profile">

            <LinearLayout
                style="@style/lin_layout_vertical">

                <TextView android:text="@string/hint_name"
                    style="@style/tv_title_profile"/>
                <TextView style="@style/tv_value_profile"
                    android:text="@string/hint_name"
                    android:id="@+id/tvFullname"/>

                <TextView android:text="@string/hint_email"
                    style="@style/tv_title_profile"/>
                <TextView android:text="@string/hint_email"
                    style="@style/tv_value_profile"
                    android:id="@+id/tvEmail"/>

                <TextView android:text="@string/hint_date_creation"
                    style="@style/tv_title_profile"/>
                <TextView android:text="@string/hint_date_creation"
                    android:id="@+id/tvDateRegistration"
                    style="@style/tv_value_profile"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>